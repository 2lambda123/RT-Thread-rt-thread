from building import *

cwd = GetCurrentDir()
src = []
CPPPATH = [cwd]
src += ['drv_gpio.c']
src += ['drv_uart.c']

if GetDepend('BSP_USING_SOFT_I2C'):
    src += ['drv_soft_i2c.c']

if GetDepend('BSP_USING_SOFT_SPI'):
    src += ['drv_soft_spi.c']

group = DefineGroup('Drivers', src, depend = [''], CPPPATH = CPPPATH)

Return('group')
