mainmenu "RT-Thread Project Configuration"

config $BSP_DIR
    string
    option env="BSP_ROOT"
    default "."

config $RTT_DIR
    string
    option env="RTT_ROOT"
    default "../.."

config $PKGS_DIR
    string
    option env="PKGS_ROOT"
    default "packages"

source "$RTT_DIR/Kconfig"
source "$PKGS_DIR/Kconfig"

config SOC_STM32F4
    bool 
    select ARCH_ARM_CORTEX_M4
    default y

menu "BSP select"

menu "Boards Select"
config Boards
    bool "STM32F405-Breadfruit"
    select drivers
    default y
endmenu

menu "Drivers"
config Drivers
    bool "drivers all"
    select drivers
    default y
endmenu

menu "Libraries"
config Libraries
    bool "Libraries all"
    select Libraries
    default y
endmenu

menu "UART Select"

config RT_USING_UART1
    bool "Enable UART1 (PB6/7)"
    default n

config RT_USING_UART2
    bool "Enable UART2 (PA2/3)"
    default y

config RT_USING_UART3
    bool "Enable UART3 (PD8/9)"
    default n

config RT_USING_UART4
    bool "Enable UART4 (PC10/11)"
    default n

config RT_USING_UART5
    bool "Enable UART5 (PC12/PD2)"
    default n

endmenu


endmenu

#source "$BSP_DIR/drivers/Kconfig"
