from building import *

cwd     = GetCurrentDir()
src     = Glob('*.c') + Glob('*.cpp') + Glob('*.S')
CPPDEFINES = []

CPPPATH = [cwd]

if GetDepend('BSP_USING_CV1800B'):
    CPPPATH += [cwd + r'/cv1800b']

CPPDEFINES += ['-DCONFIG_64BIT']

group = DefineGroup('drivers', src, depend = [''], CPPDEFINES = CPPDEFINES, CPPPATH = CPPPATH)

Return('group')
