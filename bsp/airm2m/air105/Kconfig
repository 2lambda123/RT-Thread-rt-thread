mainmenu "RT-Thread Configuration"

config BSP_DIR
    string
    option env="BSP_ROOT"
    default "."

config RTT_DIR
    string
    option env="RTT_ROOT"
    default "../../.."

config PKGS_DIR
    string
    option env="PKGS_ROOT"
    default "packages"
 
source "$RTT_DIR/Kconfig"
source "$PKGS_DIR/Kconfig"
source "board/Kconfig"

menu "chip select"
    choice
        prompt "chip system type"
        default __AIR105_BSP__
        config __AIR105_BSP__
            bool "AIR105"
            select ARCH_ARM_CORTEX_M4
            select RT_USING_COMPONENTS_INIT
            select RT_USING_USER_MAIN
            default y
    endchoice
endmenu
