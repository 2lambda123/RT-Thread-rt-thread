mainmenu "RT-Thread Configuration"

config RT_USING_COMPONENTS_INIT
    bool 
    default y
    
config RT_USING_USER_MAIN
    bool 
    default y

config BSP_DIR
    string
    option env="BSP_ROOT"
    default "."

config RTT_DIR
    string
    option env="RTT_ROOT"
    default "../.."

config PKGS_DIR
    string
    option env="PKGS_ROOT"
    default "packages"

source "$RTT_DIR/Kconfig"
source "$PKGS_DIR/Kconfig"
