menu "BSP Config"

config SOC_SERIES_GD32F1
	bool "SOC_SERIES_GD32F1"
	select SOC_GD32F103RC
	select RT_USING_COMPONENTS_INIT
	select RT_USING_USER_MAIN
	default y

	menuconfig BSP_USING_USART
		bool "Enable USART"
		default y
		select RT_USING_SERIAL
		if BSP_USING_USART
				config BSP_USING_USART0
						bool "Enable USART0"
						default n

				config BSP_USING_USART1
						bool "Enable USART1"
						default y

				config BSP_USING_USART2
						bool "Enable USART2"
						default n

				config BSP_USING_USART3
						bool "Enable USART3"
						default n
		endif

	config BSP_USING_ONCHIP_FLASH
			bool "Enable onchip Flash."
			default y
endmenu
