menu "Hardware Drivers Config"

config SOC_ARM_SERIES_CH32F103
    bool 
    select RT_USING_COMPONENTS_INIT
    select RT_USING_USER_MAIN
    default y

menu "On-chip Peripheral Drivers"


config BSP_USING_UART
	bool "using onchip usart"
	select RT_USING_SERIAL
	default n

	if BSP_USING_UART
		config BSP_USING_UART1
    		bool "using uart1"
    		default n
    
		config BSP_USING_UART2
    		bool "using uart2"
    		default n

		config BSP_USING_UART3
		    bool "using uart3"
		    default n
	endif

config BSP_USING_SPI
	bool "using onchip spi"
	select RT_USING_SPI
	default n

	if BSP_USING_SPI

		config BSP_USING_SPI1
			bool "using spi1"
			default n

		config BSP_USING_SPI2
			bool "using spi2"
			default n
	endif

config BSP_USING_HWI2C
	bool "using onchip i2c"
	select RT_USING_I2C
	default n

	if BSP_USING_HWI2C
	
		config BSP_USING_HWI2C1
			bool "using i2c1"
			default n

		config BSP_USING_HWI2C2
			bool "using i2c2"
			default n
	endif

config BSP_USING_IWDT
	bool "using onchip iwdt"
	select RT_USING_WDT
	select LSI_VALUE
	default n

config BSP_USING_RTC
	bool "using onchip rtc"
	select RT_USING_RTC
	default n

	if BSP_USING_RTC
		config BSP_USING_RTC_LSI
			bool "using LSI clock for rtc, if not, LSE default"
			select LSI_VALUE
			default n
	endif

config LSI_VALUE
	int 
	default 40000

endmenu

menu "Onboard Peripheral Drivers"
   
endmenu

menu "Board extended module Drivers"

endmenu

endmenu
