Import('RTT_ROOT')
Import('rtconfig')
from building import *

cwd = GetCurrentDir()

src = Split('''
main.c
''')

if GetDepend(['BSP_USING_NRF24L01']):
    src += Glob('ports/nrf24l01_init.c')

CPPPATH = [cwd]

group = DefineGroup('Applications', src, depend = [''], CPPPATH = CPPPATH)

Return('group')
